rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ===== HELPER FUNCTIONS =====
    function isOwner(fieldValue) {
      return request.auth != null && request.auth.uid == fieldValue;
    }
    
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }
    
    function incomingData() {
      return request.resource.data;
    }
    
    function existingData() {
      return resource.data;
    }

    // ===== PUBLIC READ-ONLY LISTS =====
    match /countries/{docId} { 
      allow read: if true; 
      allow write: if isAdmin(); 
    }
    
    match /services/{docId} { 
      allow read: if true; 
      allow write: if isAdmin(); 
    }
    
    match /restricted_countries/{docId} { 
      allow read: if true; 
      allow write: if isAdmin(); 
    }
    
    match /restricted_domains/{docId} { 
      allow read: if true; 
      allow write: if isAdmin(); 
    }
    
    match /settings/{docId} { 
      allow read: if true; 
      allow write: if isAdmin(); 
    }
    
    match /system_restrictions/{docId} { 
      allow read: if true; 
      allow write: if isAdmin(); 
    }
    
    match /in-app-msg/{docId} { 
      allow read: if true; 
      allow write: if isAdmin(); 
    }
    
    match /operators/{docId} { 
      allow read: if true; 
      allow write: if isAdmin(); 
    }

    // ===== PRODUCT LISTINGS =====
    match /product_listings/{docId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // ===== GIFT DELIVERY SYSTEM =====
    match /gift_categories/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /gifts/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /gift_availability/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /shipping_rates/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /shipping_size_fees/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /saved_addresses/{docId} {
      allow read: if request.auth != null && (isOwner(resource.data.userId) || isAdmin());
      allow create: if request.auth != null && isOwner(incomingData().userId);
      allow update: if request.auth != null && (isOwner(resource.data.userId) || isAdmin());
      allow delete: if request.auth != null && (isOwner(resource.data.userId) || isAdmin());
    }

    match /custom_gift_requests/{docId} {
      allow read: if request.auth != null && (isOwner(resource.data.userId) || isAdmin());
      allow create: if request.auth != null && isOwner(incomingData().userId);
      allow update: if request.auth != null && (isOwner(resource.data.userId) || isAdmin());
      allow delete: if isAdmin();
    }

    match /gift_orders/{docId} {
      allow read: if request.auth != null && (isOwner(resource.data.senderId) || isAdmin());
      allow create: if request.auth != null && isOwner(incomingData().senderId);
      allow update: if request.auth != null && (isOwner(resource.data.senderId) || isAdmin());
      allow delete: if isAdmin();
    }

    match /order_status_history/{docId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && (isAdmin() || isOwner(incomingData().updatedBy));
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    match /tracking_links/{docId} {
      allow read: if true; // Public access for recipients
      allow create: if request.auth != null;
      allow update: if request.auth != null || isAdmin();
      allow delete: if isAdmin();
    }

    // ===== USER DATA =====
    match /users/{userId} {
      allow read: if request.auth != null && (isOwner(userId) || isAdmin());
      allow create: if request.auth != null && isOwner(userId);
      allow update: if request.auth != null && (isOwner(userId) || isAdmin());
      allow delete: if isAdmin();
    }
    
    match /user_balances/{userId} {
      allow read, create, update: if request.auth != null && (isOwner(userId) || isAdmin());
      allow delete: if isAdmin();
    }
    
    match /user_restrictions/{docId} {
      allow read: if request.auth != null && (isOwner(resource.data.userId) || isAdmin());
      allow write: if isAdmin();
    }

    // ===== DEPOSITS + PAYMENTS =====
    match /deposits/{docId} {
      allow read: if request.auth != null && (isOwner(resource.data.userId) || isAdmin());
      allow create: if request.auth != null && isOwner(incomingData().userId)
                    && incomingData().amount > 0
                    && incomingData().status == "pending";
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    match /payments/{docId} {
      allow read: if request.auth != null && (isOwner(resource.data.userId) || isAdmin());
      allow create, update, delete: if isAdmin();
    }
    
    match /userDeposits/{docId} {
      allow read: if request.auth != null && (isOwner(resource.data.userId) || isAdmin());
      allow create: if request.auth != null && isOwner(incomingData().userId)
                    && incomingData().amount > 0
                    && incomingData().status == "pending";
      allow update: if request.auth != null && (isOwner(resource.data.userId) || isAdmin())
                    && (isAdmin() || (existingData().status == "pending" && incomingData().status == "completed"));
      allow delete: if isAdmin();
    }

    // ===== ORDERS =====
    match /orders/{docId} {
      allow read: if request.auth != null && (isOwner(resource.data.userId) || isAdmin());
      allow create: if request.auth != null && isOwner(incomingData().userId)
                    && incomingData().amount > 0
                    && incomingData().status == "pending";
      allow update: if request.auth != null && (isOwner(resource.data.userId) || isAdmin());
      allow delete: if isAdmin();
    }
    
    match /active_orders/{docId} {
      allow read, create, update: if request.auth != null && (isOwner(resource.data.userId) || isAdmin());
      allow delete: if isAdmin();
    }
    
    match /product_orders/{docId} {
      allow read: if request.auth != null && (isOwner(resource.data.userId) || isAdmin());
      allow create: if request.auth != null && isOwner(incomingData().userId);
      allow update: if request.auth != null && (isOwner(resource.data.userId) || isAdmin());
      allow delete: if isAdmin();
    }
    
    match /activations/{docId} {
      allow read: if request.auth != null && (isOwner(resource.data.userId) || isAdmin());
      allow create: if request.auth != null && isOwner(incomingData().userId);
      allow update: if request.auth != null && (isOwner(resource.data.userId) || isAdmin());
      allow delete: if isAdmin();
    }
    
    match /sms_orders/{docId} {
      allow read: if request.auth != null && (isOwner(resource.data.userId) || isAdmin());
      allow create: if request.auth != null && isOwner(incomingData().userId);
      allow update: if request.auth != null && (isOwner(resource.data.userId) || isAdmin());
      allow delete: if isAdmin();
    }
    
    match /rentals/{docId} {
      allow read, write: if request.auth != null && (isOwner(resource.data.userId) || isAdmin());
      allow create: if request.auth != null && isOwner(incomingData().userId);
    }

    // ===== TRANSACTIONS =====
    match /balance_transactions/{docId} {
      allow read: if request.auth != null && (isOwner(resource.data.userId) || isAdmin());
      allow create: if request.auth != null && (isOwner(incomingData().userId) || isAdmin())
                    && incomingData().amount is number;
      allow update, delete: if isAdmin();
    }
    
    match /transactions/{docId} {
      allow read: if request.auth != null && (isOwner(resource.data.userId) || isAdmin());
      allow create: if request.auth != null && (isOwner(incomingData().userId) || isAdmin());
      allow update: if request.auth != null && (isOwner(resource.data.userId) || isAdmin());
      allow delete: if isAdmin();
    }
    
    match /crypto_payments/{docId} {
      allow read: if request.auth != null && (isOwner(resource.data.userId) || isAdmin());
      allow create: if request.auth != null && isOwner(incomingData().userId)
                    && incomingData().amount > 0;
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    match /crypto_payment_history/{docId} {
      allow read, update: if request.auth != null && (isOwner(resource.data.userId) || isAdmin());
      allow create: if request.auth != null && (isOwner(incomingData().userId) || isAdmin());
      allow delete: if isAdmin();
    }
    
    match /deposit_history/{docId} {
      allow read, update: if request.auth != null && (isOwner(resource.data.userId) || isAdmin());
      allow create: if request.auth != null && (isOwner(incomingData().userId) || isAdmin());
      allow delete: if isAdmin();
    }

    // ===== REFERRALS =====
    match /refers/{referId} {
      allow read: if true;
      allow create: if request.auth != null && isOwner(incomingData().userId)
                    && incomingData().commission > 0;
      allow update, delete: if isAdmin();
    }

    // ===== FEEDBACK =====
    match /feedbacks/{docId} {
      allow read: if true;
      allow create: if request.auth != null && isOwner(incomingData().userId);
      allow update, delete: if request.auth != null && (isAdmin() || isOwner(resource.data.userId));
    }

    // ===== CHAT + SUPPORT =====
    match /chats/{chatId} {
      allow read, write: if request.auth != null && (isAdmin() || resource.data.participants.hasAny([request.auth.uid]));
    }
    
    match /conversations/{convId} {
      allow read, write: if request.auth != null && (isAdmin() || isOwner(resource.data.userId));
    }
    
    match /conversation/{docId} {
      allow read, write: if request.auth != null && (isAdmin() || isOwner(resource.data.userId));
    }
    
    match /messages/{msgId} {
      allow read, write: if request.auth != null && (isAdmin() || isOwner(resource.data.senderId));
    }
    
    match /inbox/{docId} {
      allow read, write: if request.auth != null && (isOwner(resource.data.userId) || isAdmin());
    }
    
    match /UserChatSettings/{docId} {
      allow read, write: if request.auth != null && (isOwner(resource.data.userId) || isAdmin());
    }
    
    match /support_conversations/{convId} {
      allow read, write: if request.auth != null && (isAdmin() || isOwner(resource.data.userId));
    }
    
    match /support_messages/{msgId} {
      allow read, write: if request.auth != null && (isAdmin() || isOwner(resource.data.senderId));
    }

    // ===== ADMIN/SYSTEM =====
    match /service_pricing_logs/{docId} { 
      allow read: if request.auth != null; 
      allow write: if isAdmin(); 
    }
    
    match /tempEmails/{docId} { 
      allow read, write: if isAdmin(); 
    }
    
    match /admin-auth-email/{email} { 
      allow read: if true; 
      allow write: if false; 
    }

    // ===== CATCH-ALL =====
    match /{document=**} {
      allow read, write: if false;
    }
  }
}